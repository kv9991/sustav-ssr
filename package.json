{
  "name": "sustav-ssr",
  "version": "0.1.0",
  "description": "an ssr web-site with react/express",
  "main": "./server/index.js",
  "scripts": {
    "clean": "./node_modules/.bin/rimraf dist",
    "server:build": "mkdir -p dist/server && node ./bin/server.build.js",
    "server:dev": "PARCEL_WATCH=1 node ./bin/server.build.js",
    "server:run": "pm2 start ./index.js --name=sustav.pro",
    "server:stop": "pm2 delete sustav.pro",
    "server:restart": "pm2 restart sustav.pro",
    "client:dev": "PARCEL_WATCH=1 node ./bin/client.build.js",
    "client:build": "mkdir -p dist/client && node ./bin/client.build.js",
    "dev": "NODE_ENV=development npm run clean && concurrently --kill-others \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run clean && npm run server:build && npm run client:build",
    "serve:prod": "NODE_ENV=production npm run server:run",
    "serve:dev": "NODE_ENV=development npm run server:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.0.0-alpha.2",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "utils": "^0.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.4.5",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "nodemon": "^1.18.9",
    "parcel-bundler": "^1.11.0",
    "pm2": "^3.2.8",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^1.4.1",
    "postcss-simple-vars": "^5.0.1",
    "rimraf": "^2.6.3",
    "sass": "^1.16.0"
  },
  "alias": {
    "client": "./client",
    "variables": "./client/variables",
    "HOC": "./client/HOC",
    "utils": "./utils"
  }
}
